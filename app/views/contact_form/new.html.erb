<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>ContactForm</h1>
<%= form_for @contact_form, :url => url_for(:action => 'create') do |f| %>
<div id="contact-form-container">
	<div class="form-field">
		<div class="form-field-input"><input type="text" name="contact_form[name]" placeholder="Name" /></div>
	</div>
	<div class="form-field">
		<div class="form-field-input"><input type="text" name="contact_form[email]" placeholder="Email" /></div>
	</div>
	<div class="form-field">
		<textarea rows="5" name="contact_form[message]" placeholder="Enter your text here"></textarea>
	</div>
	<div class="form-field">
		<button id="submit-feedback" class="btn btn-small btn-primary pull-right">
      		Submit
    	</button>
	</div>
</div>
<% end %>