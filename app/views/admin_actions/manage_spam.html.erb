<div id="admin-actions-manage-posts" class="admin-action-pages">
<h2>Manage Spam</h2>
<p>You can manage Spams using this tool</p>
<table class="table table-striped">
  <thead>
    <tr><th>ID</th><th>Title</th>
      <th style="width: 200px">Entry</th><th>User</th><th>Name</th><th>Age</th><th>Former Job</th>
        <th>Spam#</th>
        <th>Action</th></tr>
  </thead>
  <tbody>
<% @posts.each do |post| %>
<tr>
  <td><%= post.id %></td>
  <td><%= link_to post.title, single_url(hash: post.permalink) %></td>
  <td><%= post.entry %></td>
  <td>THis is the email of user <br/> for the to many part</td>
  <td><%= post.name %></td>
  <td><%= post.age %></td>
  <td><%= post.former_job %></td>
  <td><%= post.reported_spam %>
  <td><%= link_to "Show", manage_spam_url(post, "show"), method: "post" 
              %><br/>
        <%= link_to "Delete", manage_spam_url(post, "delete"), method: "delete"
            %></td>
</tr>
<% end %>
</tbody>
</table>
<%= paginate @posts %>
</div>
