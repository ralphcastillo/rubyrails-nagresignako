<!-- <form id="submit-form-area" method="POST" action="/posts/create"> -->
<%= form_for @post, :url => url_for(:action => 'create') do |f| %>
<div id="form-proper">
  <div class="controls controls-row">
  	<div style="width: 100px; text-align: right; display: inline-block;">Your Name</div>
  	<input class="span7" type="text" name="post[name]"/>
  </div>
  
  <div class="controls controls-row">
    <div style="width: 100px; text-align: right; display: inline-block;">Age</div>
    <input class="span2" type="text" name="post[age]"/>
  </div>
  
  <div class="controls controls-row">
  	<div style="width: 100px; text-align: right; display: inline-block;">Your Ex-Job</div>
    <input class="span9" type="text" name="post[former_job]"/>
  </div>
  
  <div class="controls controls-row">
  	<div style="width: 100px; text-align: right; display: inline-block;">Story Title</div>
    <input class="span11" type="text" name="post[title]"/>
  </div>
  
  
  <div class="controls">
  	<div style="width: 100px; text-align: right; display: inline-block;">Why You Quit Your Job</div>
    <textarea maxlength="1000" rows="5" name="post[entry]"></textarea>
  </div>
  <div id="submission-area">
    <!-- <div id="character-count-area" class="pull-left">
      <span id="actual-counter">1000</span>
      <span>Character/s left.</span>
    </div> -->
    <button id="submit-entry" class="btn btn-submit">
      Submit
    </button>
    <div class="clear"></div>
  </div>
  <div id="verification-dialog">
  	<div id="verify-email" class="verify-dialog-item pull-left">
      <p><strong>CONFIRM YOUR SUBMISSION VIA E-MAIL</strong></p>
      <p>Check your e-mail to confirm your entry.</p>
      <!-- <form> -->
        <div class="input-append">
          <div style="text-align: right; display: inline-block;">Your E-mail</div>
          <input type="text" class="span3" name="email">
          <button class="btn" type="button">SUBMIT</button>
        </div>
      <!-- </form> -->
    </div>
    <div id="verify-facebook" class="verify-dialog-item pull-left">
      <button class="btn btn-info">Verify with Facebook</button>
    </div>
  </div>
</div>
<% end %>
