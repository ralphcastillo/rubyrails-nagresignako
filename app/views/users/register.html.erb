<%# TODO: this ought to be replaced by RoR functions for forms handling %>
<div id="register-form">
<form class="form-horizontal">
  <fieldset class="pull-left">
    <legend>Register</legend>

    <label for="inputUsername">Username</label>
    <input type="text" id="inputUsername" placeholder="Username">
    <span class="help-block"></span>
    <label for="inputEmail">Email</label>
    <input type="text" id="inputEmail" placeholder="Email">
    <span class="help-block"></span>
    <label for="inputPassword">Password</label>
    <input type="password" id="inputPassword" placeholder="Password">
    <span class="help-block"></span>
    <label for="inputRepeatPassword">Repeat Password</label>
    <input type="password" id="inputRepeatPassword" placeholder="Repeat Password">
    <span class="help-block"></span>
    <button type="submit" class="btn btn-primary pull-right">Register</button>
</fieldset>
<fieldset class="pull-right">
  <legend>or Connect via Facebook</legend>
  <%= link_to (image_tag "connect-with-facebook.jpg"), "#" %>
</fieldset>
</form>
</div>